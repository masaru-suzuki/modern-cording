{
  "scripts": {
    "start:server": "browser-sync start -s public -w src/.html src/css/.css src/js/*.js",
    "compile:pug": "pug src/pug/pages/ --hierarchy -o public/ -P",
    "watch:pug": "pug src/pug/pages/ --hierarchy -o public/ -w -P",
    "compile:css2cssprefix": "postcss -r public/css/**/*.css -u autoprefixer -m",
    "compile:scss2css": "sass src/scss/:public/css/ --style=expanded --no-source-map",
    "compile:scss2cssprefix": "run-s compile:scss2css compile:css2cssprefix",
    "watch:scss2cssprefix": "chokidar \"src/scss/\" --command \"npm run compile:scss2cssprefix\" --initial",
    "watch:js": "cpx \"src/js/*.js\" public/js/ -w",
    "watch:img": "chokidar \"src/img/**/*\" --command \"node imagemin.js\" --initial",
    "delete:public": "rimraf public",
    "copy:public": "cpx \"src/public/**/*\" public/",
    "prewatch:all": "run-s delete:public copy:public",
    "watch:all": "run-p watch:pug watch:scss2cssprefix watch:js watch:img start:server",
    "lint:scss": "stylelint \"**/*.scss\"",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "min:css": "cleancss -o public/css/**/*.css public/css/",
    "min:js": "uglifyjs public/js/index.js -o public/js/index.js",
    "delete:map": "rimraf public/**/*.map",
    "prepare:all": "run-p min:js min:css delete:map"
  },
  "devDependencies": {
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.5.2",
    "cpx": "^1.5.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "imagemin-cli": "^7.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rimraf": "^3.0.2",
    "sass": "^1.49.8",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.1.0",
    "uglify-es": "^3.3.9"
  },
  "name": "heroku-static-provider",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "express": "~3.3.4"
  },
  "type": "module",
  "volta": {
    "node": "16.15.0"
  }
}
